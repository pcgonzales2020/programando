{
    "parserOptions": {
        "ecmaVersion": "latest"
    },
    "env": {
        "es6": true,
        "node": true,
        "mocha": true
    },
    "parser": "babel-eslint",
    "rules": {
        "no-console": "off",
        "no-use-before-define": "warn",
        "spaced-comment": "warn",
        "indent": [
            "error",
            4
        ],
        "semi": [
            2,
            "always"
        ],
        "space-before-function-paren": "off",
        "one-var": "off",
        "no-useless-constructor": "off",
        "no-unneeded-ternary": "off",
        "no-constant-condition": "off",
        "eol-last": "off"
    },
    "extends": [
        "standard"
    ]
}